<Window x:Class="Task3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboBox" Grid.Row="0" DisplayMemberPath="Login" SelectionChanged="comboBox_SelectionChanged">
        </ComboBox>
        <ListBox Grid.Row="1"  DisplayMemberPath="Login" x:Name="listBox" SelectionChanged="listBox_SelectionChanged">
        </ListBox>
        <ListView Grid.Row="2" x:Name="listView" DisplayMemberPath="Login" SelectionChanged="listView_SelectionChanged">
        </ListView>
        <Label Content="1" x:Name="comboLabel" Grid.Column="1"/>
        <Label Content="2" x:Name="listBoxLabel" Grid.Column="1" Grid.Row="1"/>
        <Label Content="3" x:Name="listViewLabel" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
